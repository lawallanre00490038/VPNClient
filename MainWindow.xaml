<Window x:Class="VpnClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:VpnClient.ViewModels"
        xmlns:converters="clr-namespace:VpnClient.Converters"
        Title="VPN Client" Height="450" Width="600">

    <Window.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Available VPN Nodes:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListView ItemsSource="{Binding VpnNodes}" SelectedItem="{Binding SelectedVpnNode}" Height="200">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Country" DisplayMemberBinding="{Binding Country}" Width="120"/>
                        <GridViewColumn Header="Ping (ms)" DisplayMemberBinding="{Binding Latency_ms}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock Text="Connection Status:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="{Binding ConnectionStatus}" Foreground="Blue" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Connect" 
                        Command="{Binding ConnectCommand}" 
                        Width="100" Margin="0,0,10,0"
                        IsEnabled="{Binding SelectedVpnNode, Converter={StaticResource NullToBoolConverter}}"/>
                <Button Content="Disconnect" 
                        Command="{Binding DisconnectCommand}" 
                        Width="100"
                        IsEnabled="{Binding IsConnected}"/>
                <Button Content="Logout" Command="{Binding LogoutCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>



